<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
    android:id="@+id/nav_home"
    android:name="com.example.truyenchu.fragment.HomeFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_home" >
    <action
        android:id="@+id/action_nav_home_to_readingFragment"
        app:destination="@id/readingFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.truyenchu.fragment.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/nav_community"
        android:name="com.example.truyenchu.fragment.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community" />
    <fragment
        android:id="@+id/nav_library"
        android:name="com.example.truyenchu.fragment.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.truyenchu.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />


    <fragment
        android:id="@+id/readingFragment"
        android:name="com.example.truyenchu.fragment.ReadingFragment"
        android:label="fragment_reading"
        tools:layout="@layout/fragment_reading">
    </fragment>

</navigation>